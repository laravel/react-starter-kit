{
    "name": "WSJF Planning",
    "dockerComposeFile": "docker-compose.yml",
    "service": "wsjf-planning",
    "workspaceFolder": "/workspace",
    "forwardPorts": [8000, 5173, 5432],
    "portsAttributes": {
      "8000": {
        "label": "WSJF Planning"
      },
      "5173": {
        "label": "Vite Dev Server"
      },
      "5432": {
        "label": "PostgreSQL"
      }
    },
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:~/.config/composer/vendor/bin",
        "WORKOS_REDIRECT_URL": "https://${localEnv:CODESPACE_NAME}-8000.${localEnv:GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}/authenticate"
    },
    "postCreateCommand": "cp .env.example .env && sed -i 's/DB_CONNECTION=mysql/DB_CONNECTION=pgsql/g' .env && sed -i 's/DB_HOST=127.0.0.1/DB_HOST=postgres/g' .env && sed -i 's/DB_PORT=3306/DB_PORT=5432/g' .env && sed -i 's/DB_DATABASE=laravel/DB_DATABASE=wsjf_planning/g' .env && sed -i 's/DB_USERNAME=root/DB_USERNAME=wsjf/g' .env && sed -i 's/DB_PASSWORD=/DB_PASSWORD=wsjfpass/g' .env && composer install && npm install && php artisan key:generate && sleep 10 && php artisan migrate --force && php artisan migrate:fresh --seed",
    "postAttachCommand": {
        "vite": "bash .devcontainer/postAttach/vite.sh",
        "laravel": "bash .devcontainer/postAttach/laravel.sh"
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-azuretools.vscode-docker",
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "bmewburn.vscode-intelephense-client",
          "amiralizadeh9480.laravel-extra-intellisense",
          "onecentlin.laravel-blade",
          "streetsidesoftware.code-spell-checker",
          "GitHub.copilot"
        ],
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash",
          "editor.formatOnSave": true
        }
      }
    },
    "remoteUser": "vscode"
  }
