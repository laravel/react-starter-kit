{
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "npx prettier . --write ",
                "options": {
                    "label": "Running Prettier"
                }
            },
            {
                "action": "./vendor/bin/pint",
                "options": {
                    "label": "Ruinning Pint"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "php artisan test",
                "options": {
                    "label": "Running PHPUnit Tests"
                }
            },
            {
                "action": "php artisan dusk",
                "options": {
                    "label": "Running Laravel Dusk Tests"
                }
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    }
}
